<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_delivery_carrier_form_with_bobgo" model="ir.ui.view">
            <field name="name">delivery.carrier.form.with.bobgo</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='destination']" position="after">
                    <page string="Bobgo Configuration" name="bobgo_config" attrs="{'invisible': [('delivery_type', '!=', 'bobgo')]}">
                        <group>
                            <group string="API Configuration">
                                <field name="bobgo_api_key" password="True" placeholder="Bearer your_api_token_here"/>
                                <field name="bobgo_test_mode"/>
                                <field name="bobgo_handling_time"/>
                            </group>
                            <group string="Connection Status">
                                <label string="Last Connection Test"/>
                                <div>
                                    <field name="bobgo_last_connection_test" readonly="1" nolabel="1"/>
                                    <field name="bobgo_connection_status" readonly="1" nolabel="1"/>
                                </div>
                                <button name="bobgo_test_connection" string="Test Connection" type="object" class="btn-primary" 
                                        attrs="{'invisible': [('bobgo_api_key', '=', False)]}"/>
                                <div class="alert alert-warning mt-2" attrs="{'invisible': [('bobgo_api_key', '!=', False)]}">
                                    <strong>Warning:</strong> Please configure your Bobgo API key first.
                                </div>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>